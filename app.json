{
  "expo": {
    "name": "RideAssistBot",
    "slug": "ride-assist-bot",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "RideAssistBot needs access to your location to show your position on the map and provide accurate ride tracking."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#4285F4"
      },
      "package": "com.example.rideassistbot",
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "YOUR_API_KEY_HERE"
        }
      }
    },
    "web": {
    },
    "extra": {
      "eas": {
        "projectId": "your-project-id"
      }
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "color": "#4285F4"
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow RideAssistBot to use your location to track your ride and provide accurate ETA."
        }
      ]
    ]
  }
} 